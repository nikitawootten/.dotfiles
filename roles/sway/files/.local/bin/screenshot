#!/usr/bin/env bash

FILENAME=~/Pictures/screenshots/$(date +%F-%T).png

case $1 in
	"selection")
		grim -g "$(slurp)" - | tee $FILENAME | wl-copy \
			&& notify-send -u low -t 5000 -i $FILENAME \
			"Screenshot Taken"
		;;
	*)
		grim  | tee $FILENAME | wl-copy \
			&& notify-send -u low -t 5000 -i $FILENAME \
			"Screenshot Taken"
		;;
esac	
